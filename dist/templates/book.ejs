<% if (quote) { %>
<blockquote>
    <p><%- quote; %></p>
</blockquote>
<% } %>
<style>
    <%- include('index.css') %>
</style>
<div class="book-tabs">
    <a class="book-tab" id="book-tab1" href="javascript:;" rel="external" target="_self" onclick="return false">
    <%= __('wantWatch') %>
    (<%= wantWatch.length %>)</a>
    <a class="book-tab" id="book-tab2" href="javascript:;" rel="external" target="_self" onclick="return false">
        <%= __('watching') %>
        (<%= watching.length %>)</a>
    <a class="book-tab" id="book-tab3" href="javascript:;" rel="external" target="_self" onclick="return false">
        <%= __('watched') %>
        (<%= watched.length %>)</a>
</div>
<div>
    <div id="book-item1">
        <% wantWatch.forEach(function(item) { %>
        <%- include('bk-template.ejs', { item, loading, color_meta }) %>
        <% }); %>
        <%- include('pagination.ejs', {__: __}) %>
    </div>
    <div id="book-item2">
        <% watching.forEach(function(item) { %>
        <%- include('bk-template.ejs', { item, loading, color_meta }) %>
        <% }); %>
        <%- include('pagination.ejs', {__: __}) %>
    </div>
    <div id="book-item3">
        <% watched.forEach(function(item) { %>
        <%- include('bk-template.ejs', { item, loading, color_meta }) %>
        <% }); %>
        <%- include('pagination.ejs', {__: __}) %>
    </div>
</div>
<script>
    <%- include('index.js') %>
    document.getElementsByClassName('book-tab')[<%- show %>].click();
    <%- include('pagination.js', {__: __}) %>
</script>
